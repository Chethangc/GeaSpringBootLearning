package relational_database;

import java.sql.ResultSet;

/*
 * Install windowBuilder (Current) 
 * Help -> Eclipse Marketplace -> WindowBuilder -> Install 'WindowBuilder Current'.
 */
public class Main {
	public static void main(String args[]) {
		Database database = new Database();
		database.connection("chethangc", "17071998", "test_database");
		// Querying the existing data
		ResultSet result = database.queryResultSet("SELECT * FROM javajdbc.jdbcconnectiontable");
		database.printResultSet(result);
		// with WHERE condition
		result = database.queryResultSet("SELECT * FROM javajdbc.jdbcconnectiontable WHERE slno=1");
		database.printResultSet(result);
		database.insertRow("javajdbc.jdbcconnectiontable", "('Alonegc', '26', 'single')");
		result = database.queryResultSet("SELECT * FROM javajdbc.jdbcconnectiontable");
		database.printResultSet(result);
	}
}
